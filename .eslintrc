{
  "extends": "eslint:recommended",
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "__DEV__": true
  },
  "env": {
    "browser": true,
    "node": true, 
    "es6": true
  },
  "rules": {
    "no-unused-vars": ["error", { "args": "all", "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }],
    "no-unreachable": 1,
    "no-console": ["warn", { "allow": ["info", "warn", "error", "assert"] }],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "comma-dangle": ["error", "always-multiline"]
  }
}